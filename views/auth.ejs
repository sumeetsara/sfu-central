<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LogIn/SignUp</title>
    <link rel="stylesheet" href="css/auth.css">
</head>
<body>
    <div class="auth-wrapper">
        <div class="auth-box-container">
            <div class="button-container">
                <div class="sliding-button">

                </div>
                <button type="button" class="toggle" onclick="login()">Log In</button>
                <button type="button" class="toggle" onclick="register()">Sign Up</button>
                
            </div>
                <form action="/login" class="login-form" method="post">
                    <input name ="email" type="email" placeholder="Email Address" required>
                    <input name="password" type="password" placeholder="Password" required>
                    <button type="submit" name="submit" class="submit-button">Login</button>
                </form>
                <form action="/register" class="register-form" method="post">
                    <input name ="fullName" type="text" placeholder="Full Name" required>
                    <input name ="email" type="email" placeholder="Email Address" required>
                    <input name="password" type="password" placeholder="Password" required>
                    
                    <button type="submit" name="submit" class="submit-button">Sign Up</button>
                </form>
            
        </div>
    </div>
    <script>
        var loginForm = document.querySelector('.login-form')
        var registerForm = document.querySelector('.register-form')
        var slidingButton = document.querySelector('.sliding-button')

        function register () {
            slidingButton.style.left ="110px"
            loginForm.style.display = "none";
            registerForm.style.display = "block";
        }
        function login () {
            slidingButton.style.left ="0px"
            registerForm.style.display = "none";
            loginForm.style.display = "block"
        }
    </script>
</body>
</html>
